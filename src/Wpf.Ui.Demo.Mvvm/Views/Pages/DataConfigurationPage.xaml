<Page
    x:Class="Wpf.Ui.Demo.Mvvm.Views.Pages.DataConfigurationPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Wpf.Ui.Demo.Mvvm.Views.Pages"
    xmlns:models="clr-namespace:Wpf.Ui.Demo.Mvvm.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DataConfigurationPage"
    d:DataContext="{d:DesignInstance local:DataConfigurationPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <ui:NavigationView
                MinHeight="300"
                Margin="10"
                IsBackButtonVisible="Auto"
                IsPaneToggleVisible="True"
                MenuItemsSource="{Binding ViewModel.NavigationItems, Mode=OneWay}"
            PaneDisplayMode="LeftFluent">
        </ui:NavigationView>
    </Grid>
</Page>
